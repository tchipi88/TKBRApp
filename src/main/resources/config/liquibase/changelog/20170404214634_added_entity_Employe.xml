<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="now()" dbms="mysql"/>
    <property name="autoIncrement" value="true"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity Employe.
    -->
    <changeSet id="20170404214634-1" author="jhipster">
        <createTable tableName="employe">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nom" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="prenom" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="date_naissance" type="date">
                <constraints nullable="true" />
            </column>

            <column name="lieu_naissance" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="numero_cni" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="telephone" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="email" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="adresse" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="date_entree" type="date">
                <constraints nullable="true" />
            </column>

            <column name="salaire" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="fonction_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        
    </changeSet>
</databaseChangeLog>
