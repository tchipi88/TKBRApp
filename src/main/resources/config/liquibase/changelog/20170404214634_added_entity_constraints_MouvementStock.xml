<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <!--
        Added the constraints for entity MouvementStock.
    -->
    <changeSet id="20170404214634-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="entrepot_depart_id"
                                 baseTableName="mouvement_stock"
                                 constraintName="fk_mouvement_stock_entrepot_depart_id"
                                 referencedColumnNames="id"
                                 referencedTableName="entrepot"/>

        <addForeignKeyConstraint baseColumnNames="entrepot_destination_id"
                                 baseTableName="mouvement_stock"
                                 constraintName="fk_mouvement_stock_entrepot_destination_id"
                                 referencedColumnNames="id"
                                 referencedTableName="entrepot"/>

        <addForeignKeyConstraint baseColumnNames="produit_id"
                                 baseTableName="mouvement_stock"
                                 constraintName="fk_mouvement_stock_produit_id"
                                 referencedColumnNames="id"
                                 referencedTableName="produit"/>

    </changeSet>
</databaseChangeLog>
